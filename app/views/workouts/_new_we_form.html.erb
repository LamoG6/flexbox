<%= simple_form_for [@workout, @workout_exercise], html: {id: "new-we-form"}, data: { insert_in_list_target: 'form', action: 'submit->insert-in-list#send' } do |f|%>
  <%= f.association :exercise, label: "Select exercise", :input_html => { class: 'field' } %>
  <%= link_to "Cancel", edit_workout_path(@workout), class: "button-secondary", html: {id: "cancelcancel"} %>
  <%= f.button :submit, "Add exercise", class: "button-primary", data: {disable_with: false}  %>
<% end %>

<script>
document.getElementById("cancelcancel").addEventListener("click", () => {
document.getElementById("add-we-button").classList.remove("delete-we-form");
})
</script>
